<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drawing data for the "Add Term" button. -->
    <!-- Pressed state... -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/buttonPressedBackground"/>
            <corners android:radius="17.41dp"/>
            <padding
                android:left="11dp"
                android:top="11dp"
                android:right="11dp"
                android:bottom="11dp"/>
        </shape>
    </item>

    <!-- Focused state... -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/buttonFocusedBackground"/>
            <corners android:radius="17.41dp"/>
            <padding
                android:left="11dp"
                android:top="11dp"
                android:right="11dp"
                android:bottom="11dp"/>
        </shape>
    </item>

    <!-- Default state. -->
    <item>
        <shape>
            <solid android:color="@color/buttonNormalBackground"/>
            <corners android:radius="17.41dp"/>
            <padding
                android:left="11dp"
                android:top="11dp"
                android:right="11dp"
                android:bottom="11dp"/>
        </shape>
    </item>
</selector>